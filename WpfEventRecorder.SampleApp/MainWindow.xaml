<Window x:Class="WpfEventRecorder.SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Event Recorder - Sample Application"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="WPF Event Recorder Demo" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="RecordingStatus" Text=" (Recording...)"
                       FontSize="14" Foreground="Red" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Recording Controls -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="StartRecordingBtn" Content="Start Recording"
                        Click="StartRecordingBtn_Click" AutomationProperties.AutomationId="btnStartRecording"/>
                <Button x:Name="StopRecordingBtn" Content="Stop Recording"
                        Click="StopRecordingBtn_Click" IsEnabled="False" AutomationProperties.AutomationId="btnStopRecording"/>
                <Button x:Name="SaveRecordingBtn" Content="Save Recording"
                        Click="SaveRecordingBtn_Click" AutomationProperties.AutomationId="btnSaveRecording"/>
                <TextBlock x:Name="EventCountText" Text="Events: 0"
                           VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="2">
            <!-- Form Tab -->
            <TabItem Header="Form Controls">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <Label Content="Name:"/>
                        <TextBox x:Name="NameTextBox" AutomationProperties.AutomationId="txtName"
                                 TextChanged="TextBox_TextChanged"/>

                        <Label Content="Email:"/>
                        <TextBox x:Name="EmailTextBox" AutomationProperties.AutomationId="txtEmail"
                                 TextChanged="TextBox_TextChanged"/>

                        <Label Content="Category:"/>
                        <ComboBox x:Name="CategoryComboBox" AutomationProperties.AutomationId="cmbCategory"
                                  SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBoxItem Content="Technology"/>
                            <ComboBoxItem Content="Business"/>
                            <ComboBoxItem Content="Science"/>
                            <ComboBoxItem Content="Arts"/>
                        </ComboBox>

                        <Label Content="Priority:"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="LowPriorityRadio" Content="Low" GroupName="Priority"
                                         AutomationProperties.AutomationId="rdoLow" Margin="5"
                                         Checked="RadioButton_Checked"/>
                            <RadioButton x:Name="MediumPriorityRadio" Content="Medium" GroupName="Priority"
                                         AutomationProperties.AutomationId="rdoMedium" Margin="5"
                                         IsChecked="True" Checked="RadioButton_Checked"/>
                            <RadioButton x:Name="HighPriorityRadio" Content="High" GroupName="Priority"
                                         AutomationProperties.AutomationId="rdoHigh" Margin="5"
                                         Checked="RadioButton_Checked"/>
                        </StackPanel>

                        <CheckBox x:Name="NotifyCheckBox" Content="Send notifications"
                                  AutomationProperties.AutomationId="chkNotify"
                                  Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>

                        <CheckBox x:Name="AgreeCheckBox" Content="I agree to the terms"
                                  AutomationProperties.AutomationId="chkAgree"
                                  Checked="CheckBox_Changed" Unchecked="CheckBox_Changed"/>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button x:Name="SubmitButton" Content="Submit"
                                    Click="SubmitButton_Click" AutomationProperties.AutomationId="btnSubmit"/>
                            <Button x:Name="CancelButton" Content="Cancel"
                                    Click="CancelButton_Click" AutomationProperties.AutomationId="btnCancel"/>
                            <Button x:Name="ResetButton" Content="Reset"
                                    Click="ResetButton_Click" AutomationProperties.AutomationId="btnReset"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- List Tab -->
            <TabItem Header="List Controls">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Label Content="Available Items:"/>
                        <ListBox x:Name="AvailableItemsList" Height="200"
                                 AutomationProperties.AutomationId="lstAvailable">
                            <ListBoxItem Content="Item 1"/>
                            <ListBoxItem Content="Item 2"/>
                            <ListBoxItem Content="Item 3"/>
                            <ListBoxItem Content="Item 4"/>
                            <ListBoxItem Content="Item 5"/>
                        </ListBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Button Content="Add &gt;&gt;" Click="AddItemButton_Click"
                                AutomationProperties.AutomationId="btnAdd" MinWidth="80"/>
                        <Button Content="&lt;&lt; Remove" Click="RemoveItemButton_Click"
                                AutomationProperties.AutomationId="btnRemove" MinWidth="80"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <Label Content="Selected Items:"/>
                        <ListBox x:Name="SelectedItemsList" Height="200"
                                 AutomationProperties.AutomationId="lstSelected"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- API Tab -->
            <TabItem Header="API Calls">
                <StackPanel Margin="10">
                    <Label Content="Test HTTP API Calls:"/>

                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="GetRequestBtn" Content="GET Request"
                                Click="GetRequestBtn_Click" AutomationProperties.AutomationId="btnGet"/>
                        <Button x:Name="PostRequestBtn" Content="POST Request"
                                Click="PostRequestBtn_Click" AutomationProperties.AutomationId="btnPost"/>
                    </StackPanel>

                    <Label Content="Response:" Margin="0,20,0,0"/>
                    <TextBox x:Name="ApiResponseTextBox" Height="150"
                             IsReadOnly="True" AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             AutomationProperties.AutomationId="txtApiResponse"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
