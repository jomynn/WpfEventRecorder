<Window x:Class="WpfEventRecorder.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Event Recorder" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="StartButton" Content="â–¶ Start Recording"
                            Style="{StaticResource PrimaryButton}"
                            Click="StartButton_Click" Margin="0,0,8,0"/>
                    <Button x:Name="StopButton" Content="â–  Stop Recording"
                            Style="{StaticResource DangerButton}"
                            Click="StopButton_Click" Margin="0,0,8,0" IsEnabled="False"/>
                    <Button x:Name="ClearButton" Content="ðŸ—‘ Clear"
                            Style="{StaticResource PrimaryButton}"
                            Click="ClearButton_Click" Margin="0,0,8,0"/>
                    <Button x:Name="SaveButton" Content="ðŸ’¾ Save"
                            Style="{StaticResource PrimaryButton}"
                            Click="SaveButton_Click" Margin="0,0,8,0"/>
                    <Button x:Name="LoadButton" Content="ðŸ“‚ Load"
                            Style="{StaticResource PrimaryButton}"
                            Click="LoadButton_Click" Margin="0,0,8,0"/>
                    <Separator Margin="8,0"/>
                    <Button x:Name="SaveCsvButton" Content="CSV"
                            Style="{StaticResource PrimaryButton}"
                            Click="SaveCsvButton_Click" Margin="0,0,8,0" IsEnabled="False"/>
                    <Button x:Name="SaveExcelButton" Content="Excel"
                            Style="{StaticResource PrimaryButton}"
                            Click="SaveExcelButton_Click" Margin="0,0,8,0" IsEnabled="False"/>
                    <Separator Margin="8,0"/>
                    <TextBlock Text="Selected:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock x:Name="SelectedCountText" Text="0" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Button x:Name="SelectAllButton" Content="All"
                            Style="{StaticResource PrimaryButton}"
                            Click="SelectAllButton_Click" Margin="0,0,4,0" IsEnabled="False" Padding="8,4"/>
                    <Button x:Name="DeselectAllButton" Content="None"
                            Style="{StaticResource PrimaryButton}"
                            Click="DeselectAllButton_Click" IsEnabled="False" Padding="8,4"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#E8F4FD" CornerRadius="4" Padding="8,4" Margin="0,0,16,0"
                            x:Name="TargetWindowBorder" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Target: " Foreground="#0078D4" FontWeight="SemiBold"/>
                            <TextBlock x:Name="TargetWindowText" Text="" Foreground="#0078D4" MaxWidth="200" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="Gray" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusText" Text="Ready" FontWeight="SemiBold"/>
                    <TextBlock x:Name="EventCountText" Text=" (0 events)" Foreground="Gray" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Events List -->
            <Border Grid.Column="0" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Recorded Events" FontWeight="Bold" FontSize="14" Margin="0,0,0,8"/>

                    <ListView x:Name="EventsList" Grid.Row="1" SelectionChanged="EventsList_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="30">
                                    <GridViewColumn.Header>
                                        <CheckBox x:Name="SelectAllCheckBox"
                                                  Click="SelectAllCheckBox_Click"
                                                  ToolTip="Select/Deselect All"
                                                  IsChecked="True"/>
                                    </GridViewColumn.Header>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelectedForExport, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      Click="CheckBox_Click"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Time" Width="80" DisplayMemberBinding="{Binding TimeString}"/>
                                <GridViewColumn Header="Type" Width="120" DisplayMemberBinding="{Binding TypeString}"/>
                                <GridViewColumn Header="Details" Width="300" DisplayMemberBinding="{Binding Summary}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>

            <!-- Right Panel with Tabs -->
            <TabControl Grid.Column="2" Margin="10">
                <!-- Event Details Tab -->
                <TabItem Header="Event Details">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBox x:Name="DetailsTextBox" Grid.Row="0"
                                 IsReadOnly="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" FontSize="11"
                                 Background="#FAFAFA"/>

                        <TextBlock Grid.Row="1" Text="Request/Response Body" FontWeight="Bold" FontSize="12" Margin="0,8,0,4"/>
                        <TextBox x:Name="BodyTextBox" Grid.Row="2"
                                 IsReadOnly="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Consolas" FontSize="11"
                                 Background="#FAFAFA"/>
                    </Grid>
                </TabItem>

                <!-- Visual Tree Tab -->
                <TabItem Header="Visual Tree">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <Button x:Name="RefreshTreeButton" Content="ðŸ”„ Refresh"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="RefreshTree_Click" Padding="8,4" Margin="0,0,4,0"/>
                            <Button x:Name="ExpandAllButton" Content="âž• Expand All"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="ExpandAll_Click" Padding="8,4" Margin="0,0,4,0"/>
                            <Button x:Name="CollapseAllButton" Content="âž– Collapse All"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="CollapseAll_Click" Padding="8,4"/>
                        </StackPanel>

                        <!-- TreeView -->
                        <TreeView x:Name="VisualTreeView" Grid.Row="1"
                                  SelectedItemChanged="VisualTreeView_SelectedItemChanged"
                                  BorderThickness="1" BorderBrush="#E0E0E0">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal" Margin="2">
                                        <TextBlock Text="{Binding ControlType}"
                                                   FontWeight="SemiBold" Foreground="#0078D4"/>
                                        <TextBlock Text="{Binding DisplayText}"
                                                   Margin="4,0,0,0" Foreground="#666666"/>
                                        <TextBlock Text=" (" Foreground="#999999"
                                                   Visibility="{Binding ChildCount, Converter={x:Null}}"/>
                                        <TextBlock Text="{Binding ChildCount}" Foreground="#999999"
                                                   Visibility="{Binding ChildCount, Converter={x:Null}}"/>
                                        <TextBlock Text=")" Foreground="#999999"
                                                   Visibility="{Binding ChildCount, Converter={x:Null}}"/>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </Grid>
                </TabItem>

                <!-- Properties Tab -->
                <TabItem Header="Properties">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="PropertyHeader" Grid.Row="0"
                                   Text="Select an element from Visual Tree"
                                   FontWeight="Bold" FontSize="12" Margin="0,0,0,8"
                                   Foreground="#666666"/>

                        <ListView x:Name="PropertyList" Grid.Row="1"
                                  BorderThickness="1" BorderBrush="#E0E0E0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Property" Width="120"
                                                    DisplayMemberBinding="{Binding Name}"/>
                                    <GridViewColumn Header="Value" Width="180"
                                                    DisplayMemberBinding="{Binding Value}"/>
                                </GridView>
                            </ListView.View>
                            <ListView.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <Border Background="#E8F4FD" Padding="4,2" Margin="0,4,0,2">
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="Bold" Foreground="#0078D4"/>
                                            </Border>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </ListView.GroupStyle>
                        </ListView>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusBarText" Grid.Column="0" Text="Ready to record" Foreground="Gray"/>
                <TextBlock Grid.Column="1" Text="WPF Event Recorder v1.0 (.NET 8)" Foreground="Gray"/>
            </Grid>
        </Border>
    </Grid>
</Window>
