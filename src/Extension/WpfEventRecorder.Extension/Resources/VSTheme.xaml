<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Visual Studio Theme Colors -->
    <!-- These use DynamicResource to automatically adapt to VS theme changes -->

    <!-- Main Window Colors -->
    <SolidColorBrush x:Key="WindowBackground" Color="{DynamicResource VsColor.Window}" />
    <SolidColorBrush x:Key="WindowForeground" Color="{DynamicResource VsColor.WindowText}" />

    <!-- Control Colors -->
    <SolidColorBrush x:Key="ControlBackground" Color="{DynamicResource VsColor.ControlLightLight}" />
    <SolidColorBrush x:Key="ControlBorder" Color="{DynamicResource VsColor.ControlDark}" />

    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackground" Color="{DynamicResource VsColor.ButtonFace}" />
    <SolidColorBrush x:Key="ButtonForeground" Color="{DynamicResource VsColor.ButtonText}" />

    <!-- Selection Colors -->
    <SolidColorBrush x:Key="SelectionBackground" Color="{DynamicResource VsColor.Highlight}" />
    <SolidColorBrush x:Key="SelectionForeground" Color="{DynamicResource VsColor.HighlightText}" />

    <!-- Grid Colors -->
    <SolidColorBrush x:Key="GridLineColor" Color="{DynamicResource VsColor.GridLine}" />

    <!-- Event Type Colors (fixed colors for consistency) -->
    <SolidColorBrush x:Key="InputEventColor" Color="#4CAF50" />
    <SolidColorBrush x:Key="CommandEventColor" Color="#2196F3" />
    <SolidColorBrush x:Key="ApiEventColor" Color="#9C27B0" />
    <SolidColorBrush x:Key="NavigationEventColor" Color="#FF9800" />
    <SolidColorBrush x:Key="WindowEventColor" Color="#607D8B" />

    <!-- Status Colors -->
    <SolidColorBrush x:Key="RecordingColor" Color="#F44336" />
    <SolidColorBrush x:Key="PausedColor" Color="#FF9800" />
    <SolidColorBrush x:Key="IdleColor" Color="#9E9E9E" />
    <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50" />
    <SolidColorBrush x:Key="ErrorColor" Color="#F44336" />

</ResourceDictionary>
