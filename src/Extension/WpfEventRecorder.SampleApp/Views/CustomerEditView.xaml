<UserControl x:Class="WpfEventRecorder.SampleApp.Views.CustomerEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Title}"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Margin="0,0,0,24" />

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- First Name -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="First Name:"
                       VerticalAlignment="Center" Margin="0,0,0,16" />
            <TextBox Grid.Row="0" Grid.Column="1"
                     x:Name="FirstNameBox"
                     Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,16"
                     Style="{StaticResource ModernTextBox}" />

            <!-- Last Name -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Last Name:"
                       VerticalAlignment="Center" Margin="0,0,0,16" />
            <TextBox Grid.Row="1" Grid.Column="1"
                     Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,16"
                     Style="{StaticResource ModernTextBox}" />

            <!-- Email -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:"
                       VerticalAlignment="Center" Margin="0,0,0,16" />
            <TextBox Grid.Row="2" Grid.Column="1"
                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,16"
                     Style="{StaticResource ModernTextBox}" />

            <!-- Phone -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Phone:"
                       VerticalAlignment="Center" Margin="0,0,0,16" />
            <TextBox Grid.Row="3" Grid.Column="1"
                     Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,0,16"
                     Style="{StaticResource ModernTextBox}" />

            <!-- Date of Birth -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Date of Birth:"
                       VerticalAlignment="Center" Margin="0,0,0,16" />
            <DatePicker Grid.Row="4" Grid.Column="1"
                        SelectedDate="{Binding DateOfBirth}"
                        Margin="0,0,0,16" />

            <!-- Country -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Country:"
                       VerticalAlignment="Center" Margin="0,0,0,16" />
            <ComboBox Grid.Row="5" Grid.Column="1"
                      ItemsSource="{Binding Countries}"
                      SelectedItem="{Binding SelectedCountry}"
                      DisplayMemberPath="Name"
                      Margin="0,0,0,16" />

            <!-- Active -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Active:"
                       VerticalAlignment="Center" />
            <CheckBox Grid.Row="6" Grid.Column="1"
                      IsChecked="{Binding IsActive}"
                      VerticalAlignment="Center" />
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Padding="24,8"
                    Margin="0,0,16,0" />
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Padding="24,8"
                    Style="{StaticResource PrimaryButton}" />
        </StackPanel>
    </Grid>
</UserControl>
